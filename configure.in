
AC_INIT(coda-src/resolve/resolve.h)

dnl Checks for programs.
AC_PROG_CXX
AC_PROG_AWK
AC_PROG_CC
AC_PROG_CPP
AC_PROG_LEX
AC_PROG_LN_S
AC_PROG_MAKE_SET
AC_PROG_RANLIB
AC_PROG_YACC



dnl  Substitute the top of the object directory
AC_SUBST(TOPOBJ)
TOPOBJ=`pwd`

dnl  Enable second shadow source area
AC_SUBST(SECSRC)
AC_ARG_ENABLE(srcdir, [Second shadow directory (srcdir)], SECSRC=$enable_srcdir)

dnl Enable RCS directory
AC_SUBST(RCSDIR)
AC_ARG_ENABLE(rcsdir, [RCS directory (rcsdir)], RCSDIR=$enable_rcsdir)

dnl Enable Shared objects
AC_SUBST(SHOB)
AC_ARG_ENABLE(shareobjs, [Shared library dirs (shareobjs)], SHOB=$enable_shareobjs)

dnl Enable Platform Selection
AC_SUBST(PLATFORM)
AC_ARG_ENABLE(platform, [Platform (i386_linux2 i386_nbsd1 i386_mach pmax_mach)], PLATFORM=$enable_platform)


