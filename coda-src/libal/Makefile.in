TOPDIR = @top_srcdir@
ifndef MAKDIR
MAKDIR = @top_srcdir@
endif
srcdir = @srcdir@
VPATH  = @srcdir@
TOPOBJ = @TOPOBJ@

include $(MAKDIR)/Makeconf

ifneq ($(SHORTSYS),djgpp)
EXECUTABLES = pcfgen
TESTS	    = altest
endif

LIBRARIES   = libal.a
HEADERS	    = al.h prs.h prs_fs.h 

SSBINS      = pcfgen

NO_LEX = yes

HFILES = al.h parsepdb.h pcf.h prs.h prs_fs.h

libal.a:  alprocs.o pcfprocs.o parsepdb.o

parsepdb.o: y.tab.c lex.yy.c $(HFILES)
	$(CC) $(CFLAGS) -c y.tab.c; mv y.tab.o parsepdb.o

lex.yy.c: parsepdb.lex lexedit.sed
	$(LEX) -l -i $<
	sed -f $(srcdir)/lexedit.sed lex.yy.c > foo.c
	mv foo.c lex.yy.c

y.tab.c: parsepdb.yacc
#	yacc $<
#	mv y.tab.c y.tab.tmp
#	sed 's/#if YY/#ifdef YY/' < y.tab.tmp > y.tab.c
	$(YACC) $<
	mv y.tab.c y.tab.tmp
	sed 's/extern char \*getenv();//g' < y.tab.tmp > y.tab.c
	rm y.tab.tmp

pcfgen:	pcfgen.o libal.a $(LIBUTIL)
	$(CC) $(LIBFLAGS) pcfgen.o libal.a $(LIBUTIL) -o pcfgen

altest: altest.o libal.a $(LIBUTIL)
	$(CC) ${LIBFLAGS} altest.o libal.a $(LIBUTIL) -o altest

include $(MAKDIR)/configs/Makerules
