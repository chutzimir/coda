#!/bin/csh -f

# Save user's old configuration file and hoard directory
if (-e /coda/usr/${LOGNAME}/.advicerc) then
    mv /coda/usr/$LOGNAME/.advicerc /coda/usr/$LOGNAME/.advicerc_beforeDemo
endif

if (-e /coda/usr/$LOGNAME/newHoarding) then
    mv /coda/usr/$LOGNAME/newHoarding /coda/usr/$LOGNAME/newHoarding_beforeDemo
endif

# Configuration file for CodaConsole (.advicerc)
cp /coda/usr/mre/thesis/UserStudy/CodaConsoleSetup/AdviceRC/advicerc.demo /coda/usr/$LOGNAME/.advicerc

# Definitions for data, programs, and tasks
mkdir /coda/usr/$LOGNAME/newHoarding
cp -R /coda/usr/mre/thesis/UserStudy/CodaConsoleSetup/DemoHoardData/* /coda/usr/$LOGNAME/newHoarding

