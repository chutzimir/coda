MAKDIR = @top_srcdir@
endif
srcdir = @srcdir@
VPATH  = @srcdir@
TOPOBJ = @TOPOBJ@

include $(MAKDIR)/Makeconf


TCLSCRIPTS  = 	Advice.tcl              \
		Consider.tcl            \
		ConsiderAdding.tcl      \
		ConsiderRemoving.tcl    \
		ControlPanel.tcl        \
		Date.tcl                \
		DiscoMiss.tcl           \
		Events.tcl              \
		Globals_specific.tcl    \
		Helper.tcl              \
		HoardWalk.tcl           \
		HoardWalkAdvice.tcl     \
		Indicators.tcl          \
		Initialization.tcl      \
		Lock.tcl                \
		Log.tcl                 \
		Network.tcl             \
		OutsideWorld.tcl        \
		ReadMiss.tcl            \
		Reconnection.tcl        \
		Reintegration.tcl       \
		Repair.tcl              \
		Space.tcl               \
		Task.tcl                \
		Timing.tcl              \
		Tokens.tcl              \
		WeakMiss.tcl            \
		tixCodaMeter.tcl        

EXECUTABLES = CodaConsole Globals.tcl
CBINS = $(EXECUTABLES)  $(TCLSCRIPTS)
BINDIR := $(LIBEXECDIR) 


CodaConsole: CodaConsole.in translate.sed
	sed -f translate.sed  $< > $@

Globals.tcl: Globals.tcl.in translate.sed
	sed -f translate.sed $< > $@

translate.sed: 
	echo "s%+AWK+%@AWK@%g" >> $@
	echo "s%+CP+%@CP@%g" >> $@
	echo "s%+DF+%@DF@%g" >> $@
	echo "s%+GREP+%@GREP@%g" >> $@
	echo "s%+HOSTNAME+%@HOSTNAME@%g" >> $@
	echo "s%+TIXWISH+%@TIXWISH@%g" >> $@
	echo "s%+GUIDIR+%${LIBDIR}/coda%g" >> $@
	echo "s%+CFS+%${BINDIR}/cfs%g" >> $@
	echo "s%+CLOG+%${BINDIR}/clog%g" >> $@
	echo "s%+CTOKENS+%${BINDIR}/ctokens%g" >> $@
	echo "s%+CUNLOG+%${BINDIR}/cunlog%g" >> $@
	echo "s%+HOARD+%${BINDIR}/hoard%g" >> $@
	echo "s%+VUTIL+%${BINDIR}/vutil%g" >> $@


include $(MAKDIR)/configs/Makerules
