TOPDIR = @top_srcdir@

srcdir = @srcdir@
VPATH  = @srcdir@
TOPOBJ = @TOPOBJ@

include $(TOPDIR)/Makeconf


TCLSCRIPTS  = 	Advice.tcl              \
		Consider.tcl            \
		ConsiderAdding.tcl      \
		ConsiderRemoving.tcl    \
		ControlPanel.tcl        \
		Date.tcl                \
		DiscoMiss.tcl           \
		Events.tcl              \
		Helper.tcl              \
		HoardWalk.tcl           \
		HoardWalkAdvice.tcl     \
		Indicators.tcl          \
		Initialization.tcl      \
		Lock.tcl                \
		Log.tcl                 \
		Network.tcl             \
		OutsideWorld.tcl        \
		ReadMiss.tcl            \
		Reconnection.tcl        \
		Reintegration.tcl       \
		Repair.tcl              \
		Space.tcl               \
		Task.tcl                \
		Timing.tcl              \
		Tokens.tcl              \
		WeakMiss.tcl            \
		tixCodaMeter.tcl        

EXECUTABLES = CodaConsole Globals.tcl 
CSBINS = $(EXECUTABLES)  $(TCLSCRIPTS)
SBINDIR := $(LIBEXECDIR) 


CodaConsole: CodaConsole.in translate.sed
	sed -f translate.sed  $< > $@

Globals.tcl: Globals.tcl.in translate.sed
	sed -f translate.sed $< > $@

translate.sed: Makefile
	echo "s%+AWK+%@AWK@%g" >> $@
	echo "s%+CP+%@CP@%g" >> $@
	echo "s%+DF+%@DF@%g" >> $@
	echo "s%+GREP+%@GREP@%g" >> $@
	echo "s%+HOSTNAME+%@HOSTNAME@%g" >> $@
	echo "s%+TIXWISH+%@TIXWISH@%g" >> $@
	echo "s%+GUIDIR+%${GUIDIR}%g" >> $@

include $(TOPDIR)/configs/Makerules
