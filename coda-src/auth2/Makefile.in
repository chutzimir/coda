TOPDIR = @top_srcdir@
ifndef MAKDIR
MAKDIR = @top_srcdir@/configs
endif
srcdir = @srcdir@
VPATH  = @srcdir@
TOPOBJ = @TOPOBJ@

include $(MAKDIR)/Makeconf

EXECUTABLES = auth2 authmon initpw au oldtokens
SSBINS      = auth2 authmon initpw 
CSBINS      = au
LIBRARIES   = libauth2.a
HEADERS     = ${RP2FILES} ${RP2HEADERS}

RP2FILES    = auth2.rpc2
RP2HEADERS  = $(notdir ${RP2FILES:.rpc2=.h})

LIBS=	${LIBRPC2}\
	${LIBAL}\
	${LIBOLDLWP}\
	${LIBUTIL} \
	${LIBKERNDEP} \
	${LIBCOMPAT}

libauth2.a: avice.o auser.o avenus.o auth2.server.o auth2.client.o

auth2: auth2.o libauth2.a $(LIBS)
	$(CXX) $(LIBFLAGS) auth2.o libauth2.a $(LIBS) -o auth2

oldtokens: oldtokens.o libauth2.a $(LIBS)
	$(CXX) $(LIBFLAGS) oldtokens.o libauth2.a $(LIBS) -o oldtokens

authmon: authmon.o $(LIBS)
	$(CXX) $(LIBFLAGS) authmon.o $(LIBS) -o authmon

initpw: initpw.o $(LIBS)
	$(CXX) $(LIBFLAGS) initpw.o $(LIBS) -o initpw

au: au.o libauth2.a $(LIBS)
	$(CXX) $(LIBFLAGS) au.o libauth2.a $(LIBS) -o au

# Dependencies
HFILES=	auth2.h			\
	${INCLDIR}/rpc2.h	\
	${INCLDIR}/se.h		\
	${INCLSPECIAL}/lwp.h	\
	${INCLDIR}/util.h	\
	${INCLDIR}/al.h		\
	${INCLDIR}/prs.h
auth2.h auth2.server.cc auth2.client.cc: auth2.rpc2
auth2.o: auth2.h auth2.cc
oldtokens.o: oldtokens.cc  $(HFILES)
authmon.o: authmon.cc
avice.o: avice.cc $(HFILES)
auser.o: auser.cc $(HFILES)
avenus.o: avenus.cc $(HFILES)
auth2.server.o: auth2.server.cc $(HFILES)
auth2.client.o: auth2.client.cc $(HFILES)
initpw.o: initpw.cc $(HFILES)
au.o:	au.cc $(HFILES)

include $(MAKDIR)/Makerules
