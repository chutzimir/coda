TOPDIR = @top_srcdir@

srcdir = @srcdir@
VPATH  = @srcdir@
TOPOBJ = @TOPOBJ@

include $(TOPDIR)/Makeconf

EXECUTABLES = smon2 rpc2ping getvolinfo rvmsizer
SBINS       = smon2 rpc2ping getvolinfo rvmsizer

DEPLIBS = $(LIBVICEDEP) $(LIBSYS) $(LIBBASE)
LIBS := $(DEPLIBS) $(LIBRPC2) $(LIBLWP) $(LIBCRYPTO) $(LIBS)

include $(TOPDIR)/configs/Makerules

smon2:	smon2.o $(DEPLIBS)
	$(CC) $(LDFLAGS) smon2.o $(LIBS) -lm -o smon2

rpc2ping: rpc2ping.o $(DEPLIBS)
	$(CC) $(LDFLAGS) rpc2ping.o $(LIBS) -lm -o rpc2ping

rvmsizer: rvmsizer.o $(LIBBASE)
	$(CC) $(LDFLAGS) rvmsizer.o $(LIBS) -o rvmsizer

getvolinfo: getvolinfo.o $(DEPLIBS)
	$(CC) $(LDFLAGS) getvolinfo.o $(LIBS) -lm -o getvolinfo

