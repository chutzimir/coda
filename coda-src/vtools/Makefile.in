TOPDIR = @top_srcdir@

srcdir = @srcdir@
VPATH  = @srcdir@
TOPOBJ = @TOPOBJ@

include $(TOPDIR)/Makeconf

EXECUTABLES = cmon codacon cfs hoard spy replay
ifeq ($(SYS),cygwin32)
EXECUTABLES = codacon cfs hoard spy replay
endif

CBINS       = $(EXECUTABLES)


CMON_LIBS   =  $(LIBVICEDEP) $(LIBRPC2) $(LIBSE) $(LIBOLDLWP) $(LIBCURSES) $(LIBCOMPAT)
CFS_LIBS    = $(LIBKERNDEP) $(LIBUTIL)
HOARD_LIBS  = $(LIBUTIL) $(LIBKERNDEP) 

CXXFLAGS := $(CXXFLAGS) -UVENUS

cmon: cmon.o $(CMON_LIBS)
	$(CXX) $(LIBFLAGS) cmon.o $(CMON_LIBS)  $(LIBTERMCAP) -o cmon

codacon:    codacon.o
	$(CXX) $(LIBFLAGS) -o codacon codacon.o

cfs:  cfs.o $(CFS_LIBS)
	$(CXX) $(LIBFLAGS) cfs.o $(CFS_LIBS) -o cfs

hoard: hoard.o $(HOARD_LIBS)
	$(CXX) $(LIBFLAGS) hoard.o $(HOARD_LIBS) -o hoard

spy: spy.o
	$(CXX) $(LIBFLAGS) spy.o -o spy

replay: replay.o
	$(CXX) $(LIBFLAGS) replay.o -o replay

# up is broken on the pmax because a.out.h seems incomplete
# fix if up is really needed (Satya 3/23/92)
up: up.o
	$(CXX) $(LIBFLAGS)  up.o -o up


include $(TOPDIR)/configs/Makerules
