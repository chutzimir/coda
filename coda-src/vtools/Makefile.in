TOPDIR= @top_srcdir@
srcdir = @srcdir@
VPATH = @srcdir@
TOPOBJ= @TOPOBJ@

include $(TOPDIR)/Makeconf

EXECUTABLES = cmon codacon cfs hoard spy replay
CLIENTBINS= cmon codacon cfs hoard spy replay
CC=g++

RP2FLAGS := $(RP2FLAGS) -n
CXXFLAGS := $(CXXFLAGS) -UVENUS

RP2FILES= $(VICE_RPC2)

# up is broken on the pmax because a.out.h seems incomplete
# fix if up is really needed (Satya 3/23/92)

cmon: cmon.o  vice.client.o
	$(CXX) $(LIBFLAGS) -o cmon cmon.o\
	vice.client.o \
	$(LIBRPC2) $(LIBSE) $(LIBOLDLWP) $(LIBCURSES) -ltermcap

vice.h vice.client.c: $(VICE_RPC2) $(VCRCOMMON_RPC2)


cmon.o: vice.h


codacon:    codacon.o
	$(CXX) $(CXXFLAGS) -o codacon codacon.o $(LIBFLAGS)

cfs:  cfs.o 
	$(CXX) $(CXXFLAGS)  -g -o cfs cfs.o  $(LIBFLAGS) $(LIBCODASYS) $(LIBUTIL)

hoard: hoard.o 
	$(CXX) $(CXXFLAGS) -o hoard hoard.o $(LIBFLAGS) $(LIBUTIL) $(LIBCODASYS) 

spy: spy.o
	$(CXX) $(CXXFLAGS) -g -o spy spy.o

replay: replay.o
	$(CXX) $(CXXFLAGS) -g -o replay replay.o

# Currently broken on pmax (Satya 3/23/92)
up: up.o
	$(CXX) $(CXXFLAGS) -g  -o up up.o

include $(TOPDIR)/Makerules
