TOPDIR = @top_srcdir@

srcdir = @srcdir@
VPATH  = @srcdir@
TOPOBJ = @TOPOBJ@

include $(TOPDIR)/Makeconf

LOGSCRIPTS = logbandwidth logcmls logreintegration logprogress
EXECUTABLES = cmon codacon cfs hoard spy replay $(LOGSCRIPTS)
ifeq ($(SYS),cygwin32)
EXECUTABLES = codacon cfs hoard spy replay
endif

CBINS       = $(EXECUTABLES)

CMON_LIBS   =  $(LIBVICEDEP) $(LIBRPC2) $(LIBSE) $(LIBOLDLWP) $(LIBCURSES) $(LIBCOMPAT) $(LIBBASE) $(LIBFIXUP)
CFS_LIBS    = $(LIBKERNDEP) $(LIBUTIL) $(LIBBASE) $(LIBFIXUP)
HOARD_LIBS  = $(LIBUTIL) $(LIBKERNDEP) $(LIBBASE) $(LIBFIXUP)

CXXFLAGS := $(CXXFLAGS) -UVENUS

include $(TOPDIR)/configs/Makerules

cmon: cmon.o $(CMON_LIBS)
	$(CXX) $(LIBFLAGS) cmon.o $(CMON_LIBS) -o cmon

codacon:    codacon.o
	$(CXX) $(LIBFLAGS) -o codacon codacon.o

cfs:  cfs.o $(CFS_LIBS)
	$(CXX) $(LIBFLAGS) cfs.o $(CFS_LIBS) -o cfs

hoard: hoard.o $(HOARD_LIBS)
	$(CXX) $(LIBFLAGS) hoard.o $(HOARD_LIBS) -o hoard

spy: spy.o
	$(CXX) $(LIBFLAGS) spy.o -o spy

replay: replay.o
	$(CXX) $(LIBFLAGS) replay.o -o replay

# up is broken on the pmax because a.out.h seems incomplete
# fix if up is really needed (Satya 3/23/92)
up: up.o
	$(CXX) $(LIBFLAGS)  up.o -o up

logbandwidth: logbandwidth.in translate.sed
	sed -f translate.sed  $< > $@
	chmod 755 $@

logcmls: logcmls.in translate.sed
	sed -f translate.sed  $< > $@
	chmod 755 $@

logreintegration: logreintegration.in translate.sed
	sed -f translate.sed  $< > $@
	chmod 755 $@

logprogress: logprogress.in translate.sed
	sed -f translate.sed  $< > $@
	chmod 755 $@

translate.sed: Makefile
	echo "s%+TIXWISH+%@TIXWISH@%g" >> $@

# this way translate.sed is cleaned up as well
TESTS = translate.sed
