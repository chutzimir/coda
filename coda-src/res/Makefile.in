TOPDIR = @top_srcdir@

srcdir = @srcdir@
VPATH  = @srcdir@
TOPOBJ = @TOPOBJ@

include $(TOPDIR)/Makeconf

LIBRARIES  = libreslib.a
HEADERS	   =  rescomm.h logalloc.h pdlist.h remotelog.h resforce.h \
	      reslog.h resutil.h lockqueue.h timing.h

RESC_LIBS  = ${LIBKERNDEP} ${LIBRPC2} ${LIBOLDLWP}

RESLIBOBJS = logalloc.o pdlist.o remotelog.o resclient.o lockqueue.o\
             rescoord.o  resforce.o reslock.o reslog.o \
             resutil.o rescomm.o timing.o weres.o 

libreslib.a:	${RESLIBOBJS}

# Test programs
resc: resc.o  vice.client.o callback.server.o $(RESC_LIBS)
	$(CXX) $(LIBFLAGS) resc.o vice.client.o callback.server.o $(RESC_LIBS) -o resc

testpdlist: testpdlist.o pdlist.o logalloc.o $(LIBUTIL)
	$(CXX) $(LIBFLAGS) testpdlist.o pdlist.o logalloc.o ${LIBUTIL} -o testpdlist

test: test.o logalloc.o ${LIBUTIL}
	$(CXX) $(LIBFLAGS) test.o logalloc.o ${LIBUTIL} -o test

timetest: timetest.o timing.o ${LIBUTIL}
	$(CXX) $(LIBFLAGS) timetest.o timing.o ${LIBUTIL} -o timetest


${RESLIBOBJS}: ${HEADERS}

pdlist.o: logalloc.h 

resc.o: vice.h callback.h

reslog.o: logalloc.h

include $(TOPDIR)/configs/Makerules
