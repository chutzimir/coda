server prefix "Fcon";

subsystem "Fcon";

#define FCONSUBSYSID	7146

typedef RPC2_Struct {
	RPC2_Integer ip1;
	RPC2_Integer ip2;
	RPC2_Integer ip3;
	RPC2_Integer ip4;
	RPC2_Integer color;
	RPC2_Integer id;
	RPC2_Integer lenmin;
	RPC2_Integer lenmax;
	RPC2_Integer factor;
	RPC2_Integer speed;
} FailFilter;

typedef RPC2_Enum { sendSide = 0, recvSide = 1, noSide = 2 } FailFilterSide;

1: GetInfo(IN OUT RPC2_BoundedBS name);

2: InsertFilter(
	IN FailFilterSide side,
	IN RPC2_Integer which,
	IN FailFilter filter
);

3: RemoveFilter(
	IN FailFilterSide side,
	IN RPC2_Integer id
);

4: ReplaceFilter(
	IN FailFilterSide side,
	IN RPC2_Integer which,
	IN FailFilter id
);

5: GetFilters(
	IN FailFilterSide side,
	IN OUT RPC2_BoundedBS filters
);

6: CountFilters(
	IN FailFilterSide side
);

7: PurgeFilters(
	IN FailFilterSide side
);
