TOPDIR = @top_srcdir@

srcdir = @srcdir@
VPATH  = @srcdir@
TOPOBJ = @TOPOBJ@

include $(TOPDIR)/Makeconf

EXECUTABLES = updatesrv updateclnt updatefetch
SSBINS      = $(EXECUTABLES)

SMANPAGES := updateclnt.8 updatesrv.8

RP2FILES    = update.rpc2
RP2HEADERS  = $(notdir ${RP2FILES:.rpc2=.h})

DEPLIBS := ${LIBVICEERROR}\
	${LIBUTIL}\
	$(LIBVICEDEP)\
	$(LIBIFS)\
	${LIBVV}\
	${LIBPARTITION}\
	${LIBUTIL}\
	${LIBKERNDEP}\
	$(LIBBASE)
LIBS := $(DEPLIBS) ${LIBRPC2} ${LIBSE} $(LIBLWP) $(LIBCRYPTO) $(LIBMATH) $(LIBS)

include $(TOPDIR)/configs/Makerules

updatesrv: updatesrv.o update.server.o ${DEPLIBS}
	$(CXX) $(LDFLAGS) updatesrv.o update.server.o ${LIBS} -o updatesrv

updateclnt: updateclnt.o update.client.o  ${DEPLIBS}
	$(CXX) $(LDFLAGS) updateclnt.o update.client.o  ${LIBS} -o updateclnt

updatefetch: updatefetch.o update.client.o  ${DEPLIBS}
	$(CXX) $(LDFLAGS) updatefetch.o update.client.o  ${LIBS} -o updatefetch

