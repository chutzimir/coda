TOPDIR = @top_srcdir@

srcdir = @srcdir@
VPATH  = @srcdir@
TOPOBJ = @TOPOBJ@

include $(TOPDIR)/Makeconf

EXECUTABLES = updatesrv updateclnt updatefetch
SSBINS      = $(EXECUTABLES)

RP2FILES    = update.rpc2
RP2HEADERS  = $(notdir ${RP2FILES:.rpc2=.h})

LIBS=	${LIBVICEERROR}\
	${LIBUTIL}\
	${LIBPORTMAP}\
	${LIBNEWLWP}\
	$(LIBVICEDEP)\
	${LIBRPC2}\
	${LIBSE}\
	$(LIBIFS)\
	${LIBVV}\
	${LIBPARTITION}\
	${LIBUTIL}\
	$(LIBOLDLWP)\
	${LIBKERNDEP}\
	$(LIBTHREADS)\
	$(LIBMACH)\
	$(LIBCOMPAT)\
	$(LIBBASE)

ifeq ($(SYS),sol2)
LIBFIXUP += -R/usr/ucblib -L/usr/ucblib -lucb
endif

include $(TOPDIR)/configs/Makerules

updatesrv: updatesrv.o update.server.o ${LIBS}
	$(CXX) $(LIBFLAGS) updatesrv.o update.server.o ${LIBS} ${LIBFIXUP} -lm -o updatesrv

updateclnt: updateclnt.o update.client.o  ${LIBS}
	$(CXX) $(LIBFLAGS) updateclnt.o update.client.o  ${LIBS} ${LIBFIXUP} -lm -o updateclnt

updatefetch: updatefetch.o update.client.o  ${LIBS}
	$(CXX) $(LIBFLAGS) updatefetch.o update.client.o  ${LIBS} ${LIBFIXUP} -lm -o updatefetch
