# The REAL Makefile
# The other Makefiles invoke this after setting: CC CFLAGS LFLAGS
TOPDIR = @top_srcdir@

srcdir = @srcdir@
VPATH  = @srcdir@
TOPOBJ = @TOPOBJ@

include $(TOPDIR)/Makeconf

CFLAGS:= -MD -I. -I/usr/include -I$(TOPOBJ)/include 

EXECUTABLES = rp2gen

include $(TOPDIR)/configs/Makerules

%_native.o: %.c
	$(NATIVECC) $(CFLAGS) -c $< -o $@

# All the things that seem to depend on y.tab.c (except y.tab.o) really depend
# on y.tab.h, but it gets generated at the same time by yacc...
YFLAGS = -d
rp2gen_parser.c: rp2gen_parser.h
rp2gen_parser.h: rp2gen_parser.y
	$(YACC) $(YFLAGS) $< && mv y.tab.c $*.c && mv y.tab.h $*.h

rp2gen: rp2main_native.o rp2gen_parser_native.o rp2gen_lexer_native.o symtab_native.o crout_native.o util_native.o
	${NATIVECC} $(LDFLAGS) $^ -o $@

# these might need to be cleaned too
TESTS= rp2gen_lexer.c rp2gen_parser.c rp2gen_parser.h
