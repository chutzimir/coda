TOPDIR = @top_srcdir@
ifndef MAKDIR
MAKDIR = @top_srcdir@
endif
srcdir = @srcdir@
VPATH  = @srcdir@
TOPOBJ = @TOPOBJ@

include $(MAKDIR)/Makeconf

EXECUTABLES = advice_srv
CBINS      = $(EXECUTABLES)

# HEADERS     = advice_srv.h console_handler.h counters.h data.h filecopy.h globals.h helpers.h conversions.h miss.h mybstree.h rpc_setup.h volent.h

RP2FILES    = $(ADMON_RPC2) $(ADSRV_RPC2)
RP2HEADERS  = $(notdir $(RP2FILES:.rpc2=.h))

LIBS =	$(LIBFAIL)\
	$(LIBUTIL)\
	$(LIBVICEDEP)\
	$(LIBSE)\
	$(LIBRPC2)\
	$(LIBOLDLWP)\
	$(LIBCOMPAT)\
	$(LIBKERNDEP)\
	$(LIBGDBM)

OTHERLIBS = $(LIBSYS) $(LIBKVM)

HFILES =	$(INCLDIR)/admon.rpc2	\
		$(INCLDIR)/adsrv.rpc2	\
		$(INCLDIR)/advice.h	\
		$(INCLDIR)/rpc2.h       \
                $(INCLDIR)/se.h         \
		$(INCLDIR)/fail.h	\
		$(INCLSPECIAL)/lwp.h

AOBJS = console_handler.o counters.o daemon.o data.o \
	fail.o filecopy.o globals.o helpers.o conversions.o miss.o \
	mybstree.o programspy.o replacementlog.o rpcs.o volent.o

REALRPCSETUP = rpc_setup.o
FAKERPCSETUP = fake_rpc_setup.o

advice: advice_srv

libadvice.a: ${AOBJS} ${REALRPCSETUP}

libfakeadvice.a: ${AOBJS} ${FAKERPCSETUP}

fake_rpc_setup.o: rpc_setup.cc
	$(CXX) $(CFLAGS) -D__FAKE__ -c ${srcdir}/rpc_setup.cc -o fake_rpc_setup.o
	

advice_srv: $(LIBS) $(OTHERLIBS) libadvice.a advice_srv.o
	$(CXX) $(LIBFLAGS) advice_srv.o libadvice.a $(LIBS) $(OTHERLIBS) -o advice_srv



# Dependencies

include $(MAKDIR)/configs/Makerules
