TOPDIR = @top_srcdir@
srcdir = @srcdir@
VPATH  = @srcdir@
TOPOBJ = @TOPOBJ@

include $(TOPDIR)/Makeconf

EXECUTABLES = advice_srv
SCRIPTS     = $(TCLSCRIPTS) $(SCRIPT)
CSBINS      = $(EXECUTABLES)
CBINS       = $(SCRIPTS)
HEADERS     = advice_srv.h miss.h volent.h mybstree.h

RP2FILES    = $(ADMON_RPC2) $(ADSRV_RPC2)
RP2HEADERS  = $(notdir $(RP2FILES:.rpc2=.h))

LIBS =	$(LIBSE)\
	$(LIBRPC2)\
	$(LIBOLDLWP)\
	$(LIBUTIL)\
	$(LIBVICEDEP)\
	$(LIBCOMPAT)

OTHERLIBS = $(LIBSYS)

HFILES =	$(INCLDIR)/admon.rpc2	\
		$(INCLDIR)/adsrv.rpc2	\
		$(INCLDIR)/advice.h	\
		$(INCLDIR)/rpc2.h       \
                $(INCLDIR)/se.h         \
		$(INCLSPECIAL)/lwp.h

TCLSCRIPTS =	discomiss hoardlist misslist pseudomiss reconnection \
		reintegration_pending stoplight stoplight_statechange \
		user_initiated weakmiss
SCRIPTS    =	advice_install.sh

AOBJS = advice_srv.o miss.o volent.o  mybstree.o daemon.o filecopy.o

advice: advice_srv

advice_srv: $(AOBJS) $(LIBS) $(OTHERLIBS)
	$(CXX) $(LIBFLAGS) $(AOBJS) $(LIBS) $(OTHERLIBS) -o advice_srv

test_bstree: test_bstree.o mybstree.o $(LIBS) $(OTHERLIBS)
	$(CXX) $(LIBFLAGS) test_bstree.o mybstree.o $(LIBS) $(OTHERLIBS) -o test_bstree



# Dependencies
advice_srv.o: $(HFILES) $(HEADERS)
daemon.o: $(HFILES) $(HEADERS)
filecopy.o: $(HFILES) $(HEADERS)
miss.o: $(HFILES) $(HEADERS)
volent.o: $(HFILES) $(HEADERS)
admon.server.o:  $(HFILES) $(HEADERS)
adsrv.client.o:  $(HFILES) $(HEADERS)

test_bstree.o: test_bstree.h test_bstree.cc mybstree.h mybstree.cc

include $(TOPDIR)/Makerules
