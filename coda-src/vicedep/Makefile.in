TOPDIR= @top_srcdir@
srcdir = @srcdir@
VPATH = @srcdir@
TOPOBJ= @TOPOBJ@

include $(TOPDIR)/Makeconf

# RP2 files used to generate headers.
RP2FILES = res.rpc2 vcrcommon.rpc2 callback.rpc2 vice.rpc2 volutil.rpc2 \
	   voldump.rpc2 mond.rpc2 adsrv.rpc2 admon.rpc2

# Kernel headers; update these by hand when changed in kernel
VFSHEADERS = vfs.h vnode.h

# Other headers that are here to avoid circular dependencies
OTHERHEADERS = venusioctl.h srv.h operations.h recov_vollog.h

# Headers generated by rp2gen
RPC2HEADERS = vice.h callback.h vcrcommon.h res.h volutil.h voldump.h mond.h adsrv.h admon.h
RP2FLAGS := -n $(RP2FLAGS)

HEADERS = $(RPC2HEADERS) $(OTHERHEADERS) $(RP2FILES)


vfsinstall: $(VFSHEADERS)
	$(TOPDIR)/tools/our-install 644 $(INCLDIR)/vfs $?

install: vfsinstall


include $(TOPDIR)/Makerules

