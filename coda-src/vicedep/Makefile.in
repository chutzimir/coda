TOPDIR = @top_srcdir@

srcdir = @srcdir@
VPATH  = @srcdir@
TOPOBJ = @TOPOBJ@

include $(TOPDIR)/Makeconf

INCLPATH= .:$(srcdir)
INCLFLAGS = -I. -I$(srcdir)
CFLAGS := $(OPTFLAG) $(GFLAG) -MD -I. -I$(srcdir) -I$(srcdir)/../rpc2 -I$(TOPDIR)/lib-src/mlwp -I../rpc2

# All rpc2 files except for vcrcommon.rpc2 are listed in RP2FILES.
# vcrcommon is special, as it only generates a header file and the link rule
# for libvicedep would complain about vcrcommon.xxx.o not being available. 
RP2FILES = admon.rpc2 adsrv.rpc2 callback.rpc2 cml.rpc2 mond.rpc2 res.rpc2 \
	   vice.rpc2 voldump.rpc2 volutil.rpc2 writeback.rpc2

RP2CLOBJ = $(notdir ${RP2FILES:.rpc2=.client.o})
RP2SROBJ = $(notdir ${RP2FILES:.rpc2=.server.o})
RP2MUOBJ = $(notdir ${RP2FILES:.rpc2=.multi.o})
RP2HEADERS = vcrcommon.h $(notdir ${RP2FILES:.rpc2=.h})
HEADERS = venusioctl.h srv.h operations.h recov_vollog.h
LIBRARIES = libvicedep.a

include $(TOPDIR)/configs/Makerules

libvicedep.a: $(RP2CLOBJ) $(RP2SROBJ) $(RP2MUOBJ)

