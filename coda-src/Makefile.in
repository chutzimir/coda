TOPDIR = @top_srcdir@

srcdir = @srcdir@
VPATH  = @srcdir@
TOPOBJ = @TOPOBJ@

include $(TOPDIR)/Makeconf

  I =  scripts
 II =  kerndep 
III =  util dir 
 IV =  al portmapper
  V =  vicedep partition

  VI = auth2 vv
 VII =  vol librepair venus
VIII =  repair sidekick
  IX =  resolution volutil vtools
   X =  vice
  XI =  update asr egasr norton smon2

# If you add a new module to Coda, add it to the right set above
ifneq ($(SHORTSYS),djgpp)
SUBDIRS = $(I) $(II) $(III) $(IV) $(V) $(VI) $(VII) $(VIII) $(IX) \
	  $(X) $(XI)
else
SUBDIRS = $(II) $(III) $(IV) $(V) $(VI) $(VII)
endif

include $(TOPDIR)/configs/Makerules
