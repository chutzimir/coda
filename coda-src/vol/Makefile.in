TOPDIR = @top_srcdir@

srcdir = @srcdir@
VPATH  = @srcdir@
TOPOBJ = @TOPOBJ@

include $(TOPDIR)/Makeconf
CXXFLAGS += -Wall
LIBRARIES = libvol.a
HEADERS	  = vldb.h \
	    fssync.h recov.h vutil.h\
	    srvsignal.h index.h vicelock.h treeremove.h \
	    vlist.h cvnode.h coda_globals.h voldefs.h volume.h camprivate.h \
	    volres.h volhash.h vrdb.h vsg.h struct.h lockqueue.h
# TESTS	  = testvrdb testvsg # these don't compile

VICEDEPHDRS = $(INCLDIR)/vice.h

LIBVOLOBJS= dirvnode.o cvnode.o volume.o vutil.o vldb.o fssync.o \
	index.o recova.o recovb.o recovc.o volhash.o dumpcamstorage.o \
        vrdb.o vsg.o vlist.o lockqueue.o

ifeq ($(SYS),sol2)
LIBFIXUP += -R/usr/ucblib -L/usr/ucblib -lucb
endif

libvol.a: ${LIBVOLOBJS}

testvsg: testvsg.o vsg.o $(LIBUTIL) $(LIBFIXUP)
	${CXX} ${LIBFLAGS} testvsg.o vsg.o $(LIBUTIL) $(LIBFIXUP) -o testvsg

testvrdb: testvrdb.o vrdb.o $(LIBUTIL) $(LIBFIXUP)
	${CXX} ${LIBFLAGS} testvrdb.o vrdb.o $(LIBUTIL) $(LIBFIXUP) -o testvrdb


include $(TOPDIR)/configs/Makerules
