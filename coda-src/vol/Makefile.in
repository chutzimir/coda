TOPOBJ = @TOPOBJ@

include $(MAKDIR)/Makeconf

LIBRARIES = libvol.a
HEADERS	  = vldb.h \
	    fssync.h recov.h vutil.h\
	    srvsignal.h index.h vicelock.h rvmdir.h treeremove.h \
	    vlist.h cvnode.h coda_globals.h voldefs.h volume.h camprivate.h \
