TOPDIR = @top_srcdir@
srcdir = @srcdir@
VPATH  = @srcdir@
TOPOBJ = @TOPOBJ@

# Need to conditionalize this
include $(TOPDIR)/Makeconf

# presto changeo!
INCLDIR := $(INCLDIR)/cfs

LIBRARIES = libkerndep.a 
HEADERS   = mach_vioctl.h

CFLAGS += -DLINUX -DPRIVATE=static
CXXFLAGS := $(CFLAGS)

libkerndep.a:  setpag.o pioctl.o

ifneq ($(SHORTSYS), mach)
# On Linux and BSD44, convert pioctl() to ioctl()
setpag.o: setpag.c
	$(CC) $(CFLAGS) -c $<
pioctl.o: pioctl.c
	$(CC) $(CFLAGS) -c $<
else
# Actually, I'm not sure even Mach uses pioctl.s ... (Satya 1/9/97)
setpag.o: setpag.s
pioctl.o: pioctl.s
endif

OFILES= setpag.o pioctl.o
$(OFILES): $(HEADERS)

include $(TOPDIR)/Makerules
