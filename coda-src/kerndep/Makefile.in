TOPDIR = @top_srcdir@
srcdir = @srcdir@
VPATH = @srcdir@
TOPOBJ= @TOPOBJ@

# Need to conditionalize this
include $(TOPDIR)/Makeconf

CFLAGS += -DLINUX -DPRIVATE=static
CXXFLAGS := $(CFLAGS)
INCLDIR := $(INCLDIR)/cfs

# Identify files of interest
HFILES= mach_vioctl.h ifs.h
OFILES= setpag.o ifsulib.o pioctl.o
CFILES= setpag.c ifsulib.c pioctl.c

LIBRARIES = libcodasys.a libuifs.a
HEADERS   := $(HFILES)

all: $(LIBRARIES)

$(OFILES): $(HFILES) $(CFILES)

ifsulib.o: ifsulib.c


libuifs.a: ifsulib.o
	ar rv libuifs.a ifsulib.o
	ranlib libuifs.a

libcodasys.a:  setpag.o pioctl.o
	ar rv libcodasys.a setpag.o pioctl.o
	ranlib libcodasys.a

ifeq ($(SYS), i386_linux2)
setpag.o: setpag.c
	gcc -c $<
pioctl.o: pioctl.c
	gcc $(CFLAGS) -c $<
else
setpag.o: setpag.s
pioctl.o: pioctl.s
endif


install:   libinstall hdrinstall

libinstall: $(LIBRARIES)
	cp libcodasys.a libuifs.a $(LIBDIR)

hdrinstall: $(HEADERS)
ifdef HEADERS
	$(TOPDIR)/tools/our-install 644 $(INCLDIR) $?
	touch hdrinstall
endif

clean:
	rm *.o *.a

include $(TOPDIR)/Makerules
