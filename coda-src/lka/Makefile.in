TOPDIR = @top_srcdir@

srcdir = @srcdir@
VPATH  = @srcdir@
TOPOBJ = @TOPOBJ@

include $(TOPDIR)/Makeconf

EXECUTABLES = mklka testlka
HEADERS = lka.h
LIBRARIES = liblka.a
OBJS = lka.o shaprocs.o

LIBS := $(LIBUTIL) $(LIBBASE) $(LIBCRYPTO) $(LIBDB)

include $(TOPDIR)/configs/Makerules


liblka.a: $(OBJS)

mklka:  mklka.o liblka.a $(LIBS)
	$(CXX) $(LDFLAGS) mklka.o liblka.a $(LIBS) -o mklka

testlka: testlka.o liblka.a $(LIBS)
	$(CXX) $(LDFLAGS) testlka.o liblka.a $(LIBS) -o testlka
