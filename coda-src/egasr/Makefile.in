TOPDIR = @top_srcdir@

srcdir = @srcdir@
VPATH  = @srcdir@
TOPOBJ = @TOPOBJ@

include $(TOPDIR)/Makeconf

EXECUTABLES = filerepair removeinc
SCRIPTS     = xfrepair xaskuser
CBINS       = $(EXECUTABLES) $(SCRIPTS)

DEPLIBS := $(LIBDIRLIB) $(LIBKERNDEP) $(LIBBASE) $(LIBUTIL)
LIBS := $(DEPLIBS) $(LIBS)

removeinc: removeinc.o $(DEPLIBS)
	$(CC) $(LDFLAGS) $^ ${LIBS} -o removeinc

filerepair: filerepair.o $(DEPLIBS)
	$(CC) $(LDFLAGS) $^ ${LIBS} -o filerepair

include $(TOPDIR)/configs/Makerules
