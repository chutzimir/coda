# Sleep for a time to let the system start, then start the server.

echo "EDIT /etc/rc.local to call this script on startup (in the background)"
echo "Then edit this script to remove these three lines"
exit

if [ -f /vice/srv/STARTFROMBOOT ]; then
        echo 'Starting Coda File Server' > /dev/console
	sleep 180

	# Remove /vice/srv/pid if it exists (last server caught by reboot)
	rm /vice/srv/pid 
	rm /vice/srv/STARTFROMBOOT

	# start the server.
	/vice/bin/startserver &
fi

