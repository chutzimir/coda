TOPDIR = @top_srcdir@
ifndef MAKDIR
MAKDIR = @top_srcdir@
endif
srcdir = @srcdir@
VPATH  = @srcdir@
TOPOBJ = @TOPOBJ@

# Need to conditionalize this
include $(MAKDIR)/Makeconf

VENUS-SCRIPTS = vutil volmunge venus-setup

VOL-SCRIPTS	= createvol_rep purgevol purgevol_rep bldvldb.sh
VICE-SCRIPTS	= startserver
REINIT-SCRIPTS	= partial-reinit.sh
VICE-SETUP      = vice-setup vice-setup-rvm  vice-setup-scm vice-setup-srvdir vice-setup-user vice-killvolumes vice-setup-ports

BACKUP-SCRIPTS	= backup.sh tape.pl

ifeq ($(SYS),linux)
  # use SYSV style init scripts
  CINIT-SCRIPTS   = venus.init
  SINIT-SCRIPTS   = codasrv.init auth2.init update.init
else
  # use BSD style init scripts
  CINIT-SCRIPTS   = # rc.venus
  SINIT-SCRIPTS   = rc.vice
  INITDIR	  = ${prefix}/etc
endif

# all scripts
SCRIPTS := $(VENUS-SCRIPTS) $(BACKUP-SCRIPTS) $(INIT-SCRIPTS)\
	   $(VOL-SCRIPTS) $(VICE-SCRIPTS) $(REINIT-SCRIPTS)

# init scripts are installed here
BINDIR := $(INITDIR)

CBINS = $(CINIT-SCRIPTS)
CSBINS = $(VENUS-SCRIPTS)

SBINS = $(SINIT-SCRIPTS)
SSBINS = $(BACKUP-SCRIPTS) $(VICE-SCRIPTS) $(REINIT-SCRIPTS) $(VOL-SCRIPTS) $(VICE-SETUP)

include $(MAKDIR)/configs/Makerules

