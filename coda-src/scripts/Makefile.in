TOPDIR = @top_srcdir@
ifndef MAKDIR
MAKDIR = @top_srcdir@/configs
endif
srcdir = @srcdir@
VPATH  = @srcdir@
TOPOBJ = @TOPOBJ@

# Need to conditionalize this
include $(MAKDIR)/Makeconf

UPDATE-SCRIPTS	= files.bin files.db files.etc files.lib files.root
VOL-SCRIPTS	= clone createvol createvol_rep purgevol purgevol_rep bldvldb.sh
SUP-SCRIPTS	= supfile.pmax supfile.rt supfile.i386
VENUS-SCRIPTS	= vutil newvenus swapmach
INIT-SCRIPTS	= initfs initmtpts
BACKUP-SCRIPTS	= backup.sh checktape.sh extract.sh writetotape.sh restore.sh
VICE-SCRIPTS	= cleanlog startserver restartserver startfromboot
MAKE-SCRIPTS	= makebeta bbpost c++2html
REINIT-SCRIPTS	= reinit.sh recreatevol recreatevol_rep
VENUS-SETUP     = venus-setup
VICE-SETUP      = vice-configs vice-rvmsetup vice-killvolumes vice-makerootvol vice-server-setup vice-srvdirsetup vice-user-setup

SCRIPTS := $(UPDATE-SCRIPTS) $(VOL-SCRIPTS) $(SUP-SCRIPTS)\
	   $(VENUS-SCRIPTS) $(INIT-SCRIPTS) $(BACKUP-SCRIPTS)\
	   $(VICE-SCRIPTS) $(MAKE-SCRIPTS) $(REINIT-SCRIPTS)

# Note scripts that are entirely CMU dependent have been left out

CSBINS = newvenus vutil $(VENUS-SETUP)
SSBINS = $(BACKUP-SCRIPTS) $(VICE-SCRIPTS) $(REINIT-SCRIPTS) $(VOL-SCRIPTS) $(VICE-SETUP)

include $(MAKDIR)/Makerules

