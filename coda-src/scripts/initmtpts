#static char *rcsid = "$Header$";
#endif /*_BLURB_*/



/usr/coda/bin/fs mkmount /coda/usr rep.usr
/usr/coda/bin/fs mkmount /coda/project rep.project
/usr/coda/bin/fs mkmount /coda/tmp rep.tmp
/usr/coda/bin/fs mkmount /coda/nonrepr coda.nonrep.ravel
/usr/coda/bin/fs mkmount /coda/nonrepm coda.nonrep.mahler
/usr/coda/bin/fs mkmount /coda/nonrepv coda.nonrep.vivaldi
mkdir /coda/project/coda
/usr/coda/bin/fs mkmount /coda/project/coda/alpha project.coda.alpha.rep 
/usr/coda/bin/fs mkmount /coda/project/coda/beta project.coda.beta.rep 
/usr/coda/bin/fs mkmount /coda/project/coda/kernel project.coda.kernel.rep 
/usr/coda/bin/fs mkmount /coda/project/coda/src project.coda.src.rep 
/usr/coda/bin/fs mkmount /coda/usr/jjk rep.jjk
/usr/coda/bin/fs mkmount /coda/usr/dcs rep.dcs
/usr/coda/bin/fs mkmount /coda/usr/satya rep.satya
/usr/coda/bin/fs mkmount /coda/usr/meo rep.meo
/usr/coda/bin/fs mkmount /coda/usr/pkumar rep.pkumar
/usr/coda/bin/fs mkmount /coda/usr/mashburn rep.mashburn

foreach DIR (/coda /coda/tmp /coda/usr /coda/project /coda/nonrepr /coda/nonrepm /coda/nonrepv /coda/project/coda /coda/project/coda/alpha /coda/project/coda/beta /coda/project/coda/kernel /coda/project/coda/src)
/usr/coda/bin/fs sa $DIR System:coda all
/usr/coda/bin/fs sa $DIR System:AnyUser rl 
end #FOREACH

foreach DIR (pkumar satya jjk dcs meo mashburn)
/usr/coda/bin/fs sa /coda/usr/$DIR $DIR all
/usr/coda/bin/fs sa /coda/usr/$DIR System:AnyUser rl
end #FOREACH



