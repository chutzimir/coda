TOPDIR = @top_srcdir@

srcdir = @srcdir@
VPATH  = @srcdir@
TOPOBJ = @TOPOBJ@


include $(TOPDIR)/Makeconf

HEADERS   = map.h
RP2HEADERS = portmapper.h

OBJS = portmapper.server.o portmapper.client.o map.o server.o

LIBOBS = 
EXECUTABLES = rpc2portmap simpleclient
SSBINS=rpc2portmap

DEPLIBS := ${LIBBASE}
LIBS := $(DEPLIBS) ${LIBRPC2} ${LIBLWP} ${LIBDL} ${LIBUTIL} ${LIBCRYPTO} $(LIBS)

libportmap.a: $(OBJS)

rpc2portmap:   rpc2portmap.o libportmap.a ${DEPLIBS}
	$(CC) -o $@ ${LDFLAGS} $^ ${LIBS}

simpleclient:   simpleclient.o libportmap.a ${DEPLIBS}
	$(CC) -o $@ ${LDFLAGS} $^ ${LIBS}

include $(TOPDIR)/configs/Makerules
