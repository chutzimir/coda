TOPDIR = @top_srcdir@

srcdir = @srcdir@
VPATH  = @srcdir@
TOPOBJ = @TOPOBJ@


include $(TOPDIR)/Makeconf


CFLAGS := -Wall ${CFLAGS}
HEADERS   = map.h
RP2HEADERS = portmapper.h

OBJS = portmapper.server.o portmapper.client.o map.o server.o

LIBOBS = 
EXECUTABLES = rpc2portmap simpleclient
SSBINS=rpc2portmap

LIBS = ${LIBRPC2} ${LIBOLDLWP} ${LIBCOMPAT} ${LIBBASE} ${LIBFIXUP}

libportmap.a: $(OBJS)

rpc2portmap:   rpc2portmap.o libportmap.a ${LIBS}
	$(CC) -o $@ $^ ${LIBS}

simpleclient:   simpleclient.o libportmap.a ${LIBS}
	$(CC) -o $@ $^ ${OBJECTS} ${LIBS}

include $(TOPDIR)/configs/Makerules
