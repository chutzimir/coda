TOPDIR = @top_srcdir@
ifndef MAKDIR
MAKDIR = @top_srcdir@
endif
srcdir = @srcdir@
VPATH  = @srcdir@
TOPOBJ = @TOPOBJ@


include $(MAKDIR)/Makeconf


CFLAGS := -Wall ${CFLAGS}
HEADERS   = map.h portmapper.h
RP2HEADERS = portmapper.h

OBJS = portmapper.server.o portmapper.client.o map.o server.o

LIBOBS = 
EXECUTABLES = rpc2portmap simpleclient
SSBINS=rpc2portmap
RP2FILES=portmapper.rpc2

libportmap.a: $(OBJS)

rpc2portmap:   rpc2portmap.o libportmap.a
	$(CC) -o $@ $^  ${LIBRPC2} ${LIBOLDLWP} ${LIBCOMPAT}

simpleclient:   simpleclient.o libportmap.a
	$(CC) -o $@ $^ ${OBJECTS} ${LIBRPC2} ${LIBOLDLWP} ${LIBCOMPAT}

portmapper.server.o: portmapper.server.c
portmapper.client.o: portmapper.client.c

include $(MAKDIR)/configs/Makerules
