# For CMU-CSD misc collection
# Use special CS make that does auto RCS checkouts


INSTALL		= cp -p
CPP		= /usr/cs/lib/cpp

MISCDIR		= $(DESTDIR)/usr/misc/.rpc2
INCLDIR		= $(MISCDIR)/include
LIBDIR		= $(MISCDIR)/lib
NFLAGS		= -DPRIVATE=static -I$(INCLDIR)
NLIBS		= librpc2.a libse.a $(LIBDIR)/liblwp.a -lg -lm -lc

# Installation rules (Only install non-debug version for now)
install: rpc2.h se.h
	$(MAKE) -f Makefile.real all CPP="$(CPP)" CFLAGS="$(NFLAGS)" LIBS="$(NLIBS)"
	$(INSTALL) rpc2.h se.h $(INCLDIR)
	$(INSTALL) librpc2.a $(LIBDIR)/librpc2.a
	$(INSTALL) libse.a  $(LIBDIR)/libse.a
	$(MAKE) -f Makefile.real clean



