TOPDIR = @top_srcdir@

srcdir = @srcdir@
VPATH  = @srcdir@
TOPOBJ = @TOPOBJ@

include $(TOPDIR)/Makeconf

EXECUTABLES = repair
CBINS       = repair
# TESTS	    = reptest

RLIBS = ${LIBREPAIR} ${LIBVV} ${LIBAUTH2} ${LIBKERNDEP} ${LIBUTIL} ${LIBBASE} ../auth2/libauser.a

STD_LIBS = $(LIBREADLINE) $(LIBTERMCAP) ${LIBFIXUP}

OFILES = rvol.o path.o

reptest: reptest.o (OFILES) $(RLIBS)
	$(CXX) $(LDFLAGS) reptest.o $(OFILES) $(RLIBS) $(STD_LIBS) -o reptest

repair:  repair.o $(OFILES) $(RLIBS)
	$(CXX) $(LDFLAGS) repair.o $(OFILES) $(RLIBS) $(STD_LIBS) -o repair

include $(TOPDIR)/configs/Makerules

