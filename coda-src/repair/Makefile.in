TOPDIR = @top_srcdir@

srcdir = @srcdir@
VPATH  = @srcdir@
TOPOBJ = @TOPOBJ@
HEADERS = repair.h repcmds.h

include $(TOPDIR)/Makeconf

EXECUTABLES = repair
CBINS       = repair
# TESTS	    = reptest

DEPLIBS = ${LIBREPAIR} ${LIBVV} ${LIBAUTH2} ${LIBKERNDEP} ${LIBUTIL} \
     ${LIBAUSER} ${LIBBASE}
LIBS := $(DEPLIBS) $(LIBREADLINE) $(LIBTERMCAP) $(LIBS)

OFILES = rvol.o path.o repcmds.o

reptest: reptest.o $(OFILES) $(DEPLIBS)
	$(CXX) $(LDFLAGS) reptest.o $(OFILES) $(LIBS) -o reptest

repair:  repair.o $(OFILES) $(DEPLIBS)
	$(CXX) $(LDFLAGS) repair.o $(OFILES) $(LIBS) -o repair

include $(TOPDIR)/configs/Makerules

