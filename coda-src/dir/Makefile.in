TOPDIR = @top_srcdir@

srcdir = @srcdir@
VPATH  = @srcdir@
TOPOBJ = @TOPOBJ@

# Need to conditionalize this
include $(TOPDIR)/Makeconf


LIBRARIES = libcodadir.a 
HEADERS   = codadir.h

ifneq ($(SHORTSYS),djgpp)
TESTS = dirtest
endif

CFLAGS += -Wall $(INCREADLINE)
CXXFLAGS := $(CFLAGS)

OBJS= fid.o codadir.o dirbody.o dirinode.o dhcache.o # salvage.o 

libcodadir.a:  $(OBJS)

DT= libcodadir.a  $(LIBUTIL) $(LIBRDS) $(LIBSEG) $(LIBRVMLWP)  $(LIBOLDLWP)  $(LIBCOMPAT)  $(LIBBASE) $(LIBREADLINE) $(LIBTERMCAP) $(LIBFIXUP)

dirtest: dirtest.o libcodadir.a
	$(CC) -o dirtest dirtest.o $(DT)

include $(TOPDIR)/configs/Makerules

