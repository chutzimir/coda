include $(TOPDIR)/Makeconf
CXXFLAGS += -Wall
EXECUTABLES = codasrv printvrdb
SSBINS      = $(EXECUTABLES)
LIBRARIES   = libviceerror.a

CLIBS =	$(LIBVOLSERV)  \
	$(LIBVICEDEP)   \
	$(LIBAUTH2)	\
	$(LIBAL)	\
	$(LIBVOLUTIL)	\
	$(LIBRVMRES)	\
	$(LIBRESLIB)	\
	$(LIBRESOLVE) 	\
	$(LIBVOL)	\
	$(LIBVV)	\
	$(LIBPARTITION)	\
	$(LIBSYSENT)	\
	$(LIBDIRLIB)	\
	$(LIBUTIL) 	\
	$(LIBCODARDS)   \
	$(LIBSEG)  	\
