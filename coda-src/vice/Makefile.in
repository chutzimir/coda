srcdir = @srcdir@
VPATH  = @srcdir@
TOPOBJ = @TOPOBJ@

include $(TOPDIR)/Makeconf

EXECUTABLES = srv printvrdb
SSBINS      = $(EXECUTABLES)
LIBRARIES   = libviceerror.a

#CAMLIBS = $(CAMDIR)/lib/libcamlib.a $(CAMDIR)/lib/libcam.a

LIBS = 	$(LIBVOLSERV)  \
	$(LIBVICEDEP)   \
	$(LIBAUTH2)	\
	$(LIBAL)	\
	$(LIBVOLUTIL)	\
	$(LIBRESLIB)	\
	$(LIBRVMRES)	\
	$(LIBRESOLVE) 	\
	$(LIBVOL)	\
	$(LIBVV)	\
	$(LIBSYSENT)	\
	$(LIBDIRLIB)	\
	$(LIBIFS)	\
	$(LIBUTIL) 	\
	$(LIBCODARDS)   \
	$(LIBSEG)  	\
	$(LIBCODARVM) 	\
	$(LIBRPC2) 	\
	$(LIBSE)	\
	$(LIBFAIL)	\
	$(LIBOLDLWP)	\
	$(LIBMACH)	\
	$(LIBCOMPAT)

headers=$(INCLSPECIAL)/lwp.h	\
	$(INCLDIR)/al.h		\
	$(INCLDIR)/errors.h	\
	$(INCLDIR)/prs.h	\
	$(INCLSPECIAL)/lock.h	\
	$(INCLDIR)/volume.h	\
	$(INCLDIR)/cvnode.h	\
	$(INCLDIR)/rpc2.h	\
	$(INCLDIR)/fail.h	\
	$(INCLDIR)/vice.rpc2	\
	$(INCLDIR)/mond.rpc2    \
	$(INCLDIR)/srv.h	\
	$(INCLDIR)/vrdb.h	\
	$(INCLDIR)/fcon.rpc2

objects=srvproc.o	\
	srvproc2.o	\
	coppend.o	\
	codaproc.o	\
	codaproc2.o	\
	clientproc.o	\
	vicecb.o	\
	smon.o		\
	ViceErrorMsg.o	

HFILES = coppend.h codaproc.h 

dummyplumber.o: dummyplumber.cc

srv: ${objects} srv.o dummyplumber.o ${LIBS}
	$(CXX) $(LIBFLAGS) ${objects} srv.o dummyplumber.o ${LIBS} -lm -o srv

srv.plumber: ${objects} srv.o ${LIBNEWPLUMBER}
	$(CCX) $(LIBFLAGS) ${objects} srv.o ${LIBNEWPLUMBER} ${LIBS} -lm -o srv.plumber

codamon: codamon.o $(LIBUTIL)
	$(CXX) ${LIBFLAGS} codamon.o ${LIBUTIL} -o codamon

printvrdb: printvrdb.o
	$(CXX) ${LIBFLAGS} printvrdb.o -o printvrdb

libviceerror.a: ViceErrorMsg.o

${objects}:${headers} ${HFILES}

include $(TOPDIR)/Makerules
