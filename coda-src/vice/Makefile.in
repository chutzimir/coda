TOPDIR = @top_srcdir@

srcdir = @srcdir@
VPATH  = @srcdir@
TOPOBJ = @TOPOBJ@

include $(TOPDIR)/Makeconf
CXXFLAGS += -Wall
EXECUTABLES = codasrv printvrdb
SSBINS      = $(EXECUTABLES)
LIBRARIES   = libviceerror.a
SCONFFILES  = server.conf.ex

DEPLIBS := $(LIBVOLSERV) $(LIBVICEDEP) $(LIBVOLUTIL) $(LIBVOL) $(LIBRES) \
           $(LIBVV) $(LIBPARTITION) $(LIBREPIO) $(LIBDIRLIB) $(LIBAUTH2) \
           $(LIBAL) $(LIBUTIL) $(LIBBASE) $(LIBSYSENT) $(LIBLKA)
SRVLIBS := $(DEPLIBS) $(LIBRDSLWP) $(LIBSEG) $(LIBRVMLWP) $(LIBRPC2) $(LIBSE) \
	   $(LIBFAIL) $(LIBLWP) $(LIBKVM) $(LIBDB) $(LIBCRYPTO) $(LIBMATH) $(LIBS)

objects=srvproc.o	\
	srvproc2.o	\
	coppend.o	\
	codaproc.o	\
	codaproc2.o	\
	clientproc.o	\
	vicecb.o	\
	smon.o		\
	ViceErrorMsg.o	\
	writeback.o

codasrv: ${objects} srv.o ${DEPLIBS}
	$(CXX) $(LDFLAGS) srv.o ${objects} ${SRVLIBS} -o codasrv

printvrdb: printvrdb.o 
	$(CXX) ${LDFLAGS} printvrdb.o $(LIBUTIL) $(LIBBASE) $(LIBS) -o printvrdb

libviceerror.a: ViceErrorMsg.o

include $(TOPDIR)/configs/Makerules
