	$(LIBRPC2) 	\
	$(LIBSE)	\
	$(LIBFAIL)	\
	$(LIBOLDLWP)	\
	$(LIBBASE)	\
	$(LIBKVM)	\
	$(LIBMACH)	\
	$(LIBCOMPAT)

objects=srvproc.o	\
	srvproc2.o	\
	coppend.o	\
	codaproc.o	\
	codaproc2.o	\
	clientproc.o	\
	vicecb.o	\
	smon.o		\
	ViceErrorMsg.o	

codasrv: ${objects} srv.o dummyplumber.o ${CLIBS} $(LIBFIXUP)
	$(CXX) $(LIBFLAGS) srv.o ${objects} dummyplumber.o ${CLIBS} $(LIBDB) -lm $(LIBFIXUP) -o codasrv

printvrdb: printvrdb.o $(LIBFIXUP)
	$(CXX) ${LIBFLAGS} printvrdb.o $(LIBFIXUP) -o printvrdb

