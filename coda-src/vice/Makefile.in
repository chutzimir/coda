TOPDIR= @top_srcdir@
srcdir = @srcdir@
VPATH = @srcdir@
TOPOBJ= @TOPOBJ@

include $(TOPDIR)/Makeconf
CC=g++

#CAMLIBS = $(CAMDIR)/lib/libcamlib.a $(CAMDIR)/lib/libcam.a
#MACHLIBS = -lmach 

EXECUTABLES = srv printvrdb
LIBRARIES   = ViceErrorMsg.o

RP2FLAGS += -n

LIBS = 	$(LIBAUTH2)	\
	$(LIBAL)	\
	$(LIBVOLUTIL)	\
	$(SALVAGE_O) 	\
	$(LIBRESLIB)	\
	$(LIBRVMRES)	\
	$(LIBRESOLVE) 	\
	$(LIBVOL)	\
	$(LIBVV)	\
	$(LIBSYSENT)	\
	$(LIBDIRLIB)	\
	$(LIBIFS)	\
	$(LIBUTIL) 	\
	$(LIBCODARDS)       \
	$(LIBSEG)  	\
	$(LIBCODARVM) 	\
	$(LIBRPC2) 	\
	$(LIBSE)	\
	$(LIBFAIL)	\
	$(LIBOLDLWP)	


headers=$(INCLSPECIAL)/lwp.h	\
	$(INCLDIR)/al.h		\
	$(INCLDIR)/errors.h	\
	$(INCLDIR)/prs.h	\
	$(INCLSPECIAL)/lock.h	\
	$(INCLDIR)/volume.h	\
	$(INCLDIR)/cvnode.h	\
	$(INCLDIR)/rpc2.h	\
	$(INCLDIR)/fail.h	\
	$(INCLDIR)/vice.h	\
	$(INCLDIR)/mond.h       \
	$(INCLDIR)/srv.h	\
	$(INCLDIR)/vrdb.h	\
	$(INCLDIR)/fcon.h

objects=srvproc.o	\
	srvproc2.o	\
	coppend.o	\
	codaproc.o	\
	codaproc2.o	\
	clientproc.o	\
	vice.server.o	\
	vice.multi.o	\
	vicecb.o	\
	smon.o		\
	ViceErrorMsg.o	\
	callback.client.o \
	callback.multi.o \
	mond.client.o

CFILES=srv.cc srvproc.cc srvproc2.cc  codaproc.cc \
	codaproc2.cc clientproc.cc vicecb.cc smon.cc ViceErrorMsg.cc \
	printvrdb.cc coppend.cc

HFILES = coppend.h codaproc.h 

all: vice.server.c vice.multi.c callback.client.c callback.multi.c mond.client.c srv printvrdb codamon

vice.server.c vice.multi.c vice.h: $(VICE_RPC2) ${RP2GEN}
callback.client.c callback.multi.c callback.h: $(CALLBACK_RPC2) ${RP2GEN}
mond.client.c mond.h: $(MOND_RPC2) ${RP2GEN}

smon.o: mond.h

${objects}:${headers} ${HFILES}

dummyplumber.o: dummyplumber.c

srv: ${objects} srv.o ${headers} ${HFILES}  dummyplumber.o
	$(CXX) ${CXXFLAGS} $(LIBFLAGS) -o srv ${objects} srv.o dummyplumber.o ${LIBS} -lm ${MACHLIBS}

srv.plumber: ${objects} srv.o ${headers} ${HFILES}  ${LIBNEWPLUMBER}
	$(CC) ${CFLAGS} $(LIBFLAGS) -o srv.plumber ${objects} srv.o ${LIBNEWPLUMBER} ${LIBS} -lm ${MACHLIBS}

codamon: codamon.o 
	$(CXX) ${CXXFLAGS} -o codamon codamon.o ${LIBUTIL}

printvrdb: printvrdb.o
	$(CXX) ${CXXFLAGS} -o printvrdb printvrdb.o

vice.server.o: vice.server.c ${headers} ${HFILES}

callback.multi.o: callback.multi.c callback.h

clean:
	rm -f *.o srv printvrdb codamon \
	callback.client.c callback.multi.c callback.server.c \
	mond.client.c mond.multi.c mond.server.c \
	vice.client.c vice.multi.c vice.server.c \
	callback.h mond.h vice.h

include $(TOPDIR)/Makerules
