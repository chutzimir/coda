TOPDIR = @top_srcdir@
ifndef MAKDIR
MAKDIR = @top_srcdir@
endif
srcdir = @srcdir@
VPATH  = @srcdir@
TOPOBJ = @TOPOBJ@

include $(MAKDIR)/Makeconf

EXECUTABLES = venus
CSBINS      = venus
LIBRARIES   = libfaketrace.a
HEADERS	    = advice.h hdb.h newplumb.h

#Turn off data collection
#CFLAGS = $(CFLAGS) -DVENUS -DTIMING -DDISABLE_VMON -DVENUSDEBUG -DRVM_USELWP
#CFLAGS = $(CFLAGS) -DVENUS -DTIMING -DVENUSDEBUG -DRVM_USELWP 

CXXFLAGS := $(CXXFLAGS) -DVENUS -DTIMING -DDISABLE_VMON -DVENUSDEBUG -DRVM_USELWP 

LIBS=	$(LIBUTIL)\
	$(LIBCODARDS)\
	$(LIBSEG)\
	$(LIBCODARVM)\
	$(LIBOLDLWP)\
	$(LIBFAIL)\
	$(LIBKERNDEP) \
	$(LIBVV)\
	$(LIBDIRLIB)\
	$(LIBSYS)\
	$(LIBMACH)\
	$(LIBCOMPAT)\
	$(LIBVICEDEP)\
	$(LIBRPC2)\
	$(LIBSE)\
	$(LIBKVM)

HFILES= advice.h adviceconn.h advice_daemon.h binding.h comm.h fso.h hdb.h local.h mariner.h venusrecov.h sighand.h simulate.h tallyent.h user.h venuscb.h venusstats.h venusvm.h venus.private.h venusvol.h vproc.h worker.h


VOBJS = advice.o advice_daemon.o  binding.o  comm.o comm_daemon.o daemon.o fso0.o fso1.o fso_cachefile.o fso_cfscalls0.o fso_cfscalls1.o fso_cfscalls2.o fso_daemon.o fso_dir.o hdb.o hdb_daemon.o local_cml.o local_daemon.o local_fso.o local_subtree.o local_repair.o local_vol.o mariner.o venusrecov.o sighand.o simulate.o tallyent.o user.o venusutil.o venus.o venuscb.o venusvm.o  venusvol.o vol_daemon.o vol_cml.o vol_reintegrate.o vol_repair.o spool.o vol_resolve.o vol_vcb.o vol_vsr.o vol_COP2.o vproc.o vproc_pathname.o vproc_pioctl.o vproc_vfscalls.o worker.o faketrace.o


venus:  ${VOBJS} dummy.o $(LIBS) libfaketrace.a
	$(CXX) $(LIBFLAGS) ${VOBJS} dummy.o $(LIBS) libfaketrace.a -lm -o venus

# When the new plumber works it should be linked in here too.
venus.plumber:  ${VOBJS} $(LIBPLUMBER) $(LIBS) libfaketrace.a
	$(CXX) $(LIBFLAGS) ${VOBJS} $(LIBPLUMBER) $(LIBS) libfaketrace.a -lm -lsys -o venus.plumber



# (Satya, 8/16/96): this is a temporary hack to build a dummy libtrace.a for BSD44;
# All the routines are dummies

libfaketrace.a:	 faketrace.o

testjmp: testjmp.cc
	$(CXX) $(CXXFLAGS) -o testjmp testjmp.cc

testtallyent: tallyent.cc tallyent.h
	$(CXX) $(CXXFLAGS) -DTESTING -o testtallyent ${srcdir}/tallyent.cc ${LIBUTIL}

include $(MAKDIR)/configs/Makerules
