TOPDIR = @top_srcdir@

srcdir = @srcdir@
VPATH  = @srcdir@
TOPOBJ = @TOPOBJ@

include $(TOPDIR)/Makeconf

EXECUTABLES = venus
CSBINS      = venus
LIBRARIES   =
HEADERS	    = advice.h hdb.h
CCONFFILES  = venus.conf.ex

#Turn off data collection
#CFLAGS += -DVENUS -DTIMING -DVENUSDEBUG -DRVM_USELWP 

CXXFLAGS += -DVENUS -DTIMING -DVENUSDEBUG -DRVM_USELWP
DEPLIBS := $(LIBUTIL) $(LIBKERNDEP) $(LIBVV) $(LIBDIRLIB) \
	   $(LIBVICEDEP) $(LIBREPIO) $(LIBBASE) $(LIBRELAY)
LIBS := $(DEPLIBS) $(LIBRDSLWP) $(LIBSEG) $(LIBRVMLWP) $(LIBRPC2) $(LIBSE) \
	$(LIBFAIL) $(LIBLWP) $(LIBSYS) $(LIBKVM) $(LIBMATH) $(LIBS)

HFILES= adv_monitor.h adv_daemon.h advice.h binding.h comm.h fso.h hdb.h local.h mariner.h mgrp.h sighand.h tallyent.h user.h venus.private.h venus.version.h venuscb.h venusrecov.h venusstats.h venusvol.h venuswb.h vproc.h vsg.h worker.h

VOBJS = adv_monitor.o adv_daemon.o binding.o comm.o comm_daemon.o daemon.o fso0.o fso1.o fso_cachefile.o fso_cfscalls0.o fso_cfscalls1.o fso_cfscalls2.o fso_daemon.o fso_dir.o hdb.o hdb_daemon.o local_cml.o local_daemon.o local_fso.o local_subtree.o local_repair.o local_vol.o mariner.o mgrp.o venus.o venuscb.o venusrecov.o venusutil.o venusvol.o venuswb.o vol_daemon.o vol_cml.o vol_permits.o vol_reintegrate.o vol_repair.o vol_resolve.o vol_vcb.o vol_COP2.o vproc.o vproc_pathname.o vproc_pioctl.o vproc_vfscalls.o vsg.o worker.o sighand.o spool.o tallyent.o user.o


venus:  ${VOBJS} $(DEPLIBS)
	$(CXX) $(LDFLAGS) ${VOBJS} $(LIBS) -o venus

testtallyent: tallyent.cc tallyent.h
	$(CXX) $(CXXFLAGS) -DTESTING -o testtallyent ${srcdir}/tallyent.cc ${LIBUTIL}

include $(TOPDIR)/configs/Makerules
