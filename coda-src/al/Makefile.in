TOPDIR = @top_srcdir@
ifndef MAKDIR
MAKDIR = @top_srcdir@
endif
srcdir = @srcdir@
VPATH  = @srcdir@
TOPOBJ = @TOPOBJ@

include $(MAKDIR)/Makeconf

TESTS	    = altest

EXECUTABLES = pdbtool altest
SSBINS      = pdbtool
SMANPAGES   = pdbtool.8
LIBRARIES   = libal.a
HEADERS	    = al.h prs.h

NO_LEX = yes

HFILES = al.h prs.h pdb.h pdbarray.h

DEPLIBS = libal.a $(LIBRWCDB) $(LIBUTIL) $(LIBBASE)
LIBS := $(DEPLIBS) $(LIBRPC2) $(LIBLWP) $(LIBCRYPTO) $(LIBS)

include $(MAKDIR)/configs/Makerules

libal.a:  pdbdb.o pdbpack.o alprocs.o pdb.o pdbdb.o pdbpack.o pdbprofile.o pdbarray.o

altest: altest.o $(DEPLIBS) $(HFILES)
	$(CC) $(LDFLAGS) altest.o $(LIBS) -o altest

pdbtool: pdbtool.o $(DEPLIBS)
	$(CC) $(LDFLAGS) pdbtool.o $(LIBS) $(LIBREADLINE) $(LIBTERMCAP) -o pdbtool

