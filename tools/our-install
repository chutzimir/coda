#!/bin/sh

MODE=$1
DIR=$2
shift
shift
FILES=$@

SYS=`uname -s`
if [ $SYS = Linux -o $SYS = SunOS ] ; then
OWNGRP=root.root
else
OWNGRP=bin.bin
fi

if [ ! -d $DIR ] ;  then mkdir -p $DIR; fi

for f in $FILES ; do
  TARGET=$DIR/`basename $f`
  if [ -f $TARGET ] ; then rm -f $TARGET; fi
  cp -p $f $TARGET
  chmod $MODE $TARGET
  if [ `whoami` = root ]; then chown $OWNGRP $TARGET ; fi
done

