TOPDIR = @top_srcdir@
ifndef MAKDIR
MAKDIR = @top_srcdir@/configs
endif
srcdir = @srcdir@
VPATH  = @srcdir@
TOPOBJ = @TOPOBJ@

# Need to conditionalize this
include $(MAKDIR)/Makeconf

EXECUTABLES = testrvm rvm_basher lwp_basher
TESTS = testrvm rvm_basher lwp_basher

TESTRVM_LIBS    = $(LIBRVM) $(LIBCOMPAT) $(LIBMACH)
RVM_BASHER_LIBS = $(LIBRDS) $(LIBSEG) $(LIBRVM) $(LIBCOMPAT) $(LIBMACH)
LWP_BASHER_LIBS = $(LIBRDSLWP) $(LIBSEG) $(LIBRVMLWP) $(LIBOLDLWP) \
		  $(LIBMACH) $(LIBCOMPAT)

# re-install this when libplumber is ready, for mach platform -- clement
# LWP_BASHER_LIBS = $(LIBRDSLWP) $(LIBSEG) $(LIBRVMLWP) $(LIBOLDLWP) \
#                  $(LIBPLUMBER) $(LIBMACH)
# CFLAGS := $(CFLAGS) -DHAS_PLUMBER

# CFLAGS = -g3 -O2 -I/afs/cs.cmu.edu/user/tilt/rvm-top/include

# build simple RVM test program
testrvm.o: testrvm.h testrvm.c

testrvm: testrvm.h testrvm.o $(TESTRVM_LIBS)
	$(CC) $(LIBFLAGS) testrvm.o $(TESTRVM_LIBS) -o testrvm

# build better test program using seg and rds
rvm_basher.o:	rvm_basher.c 

rvm_basher: rvm_basher.o $(RVM_BASHER_LIBS)
	$(CC) $(LIBFLAGS) rvm_basher.o $(RVM_BASHER_LIBS) -o rvm_basher

# Coda-specific installations

lwp_basher.o:	rvm_basher.c 
	-mv rvm_basher.o xxx_basher.o
	${MAKE} CFLAGS="$(CFLAGS) -DRVM_USELWP" rvm_basher.o
	mv rvm_basher.o lwp_basher.o
	-mv xxx_basher.o rvm_basher.o

lwp_basher: lwp_basher.o $(LWP_BASHER_LIBS)
	    $(CC) $(LIBFLAGS) lwp_basher.o $(LWP_BASHER_LIBS) -o lwp_basher

installlwpfiles:
	$(INSTALL) lwp_basher $(BINDIR)
	-chmod 0755 $(BINDIR)/lwp_basher

reinstalllwp:
	${MAKE} lwp_basher
	${MAKE} installlwpfiles

installlwp:
	-rm lwp_basher lwp_basher.o
	${MAKE} reinstalllwp

lwp:	lwp_basher

include $(MAKDIR)/Makerules

