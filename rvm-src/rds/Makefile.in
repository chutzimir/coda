TOPDIR = @top_srcdir@

srcdir = @srcdir@
VPATH  = @srcdir@
TOPOBJ = @TOPOBJ@

include $(TOPDIR)/Makeconf

LIBOBJ = rds_coalesce.o rds_free.o rds_init.o rds_malloc.o rds_prealloc.o \
       rds_split.o rds_stats.o rds_start.o rds_util.o rds_zap.o 

OBJ = rdsinit.o
RDSINIT_LIBS = $(LIBSEG) $(LIBRVM) $(LIBOLDLWP) $(LIBCOMPAT) $(LIBTHREADS) $(LIBBASE)


HERE := $(shell basename `pwd`)
ifeq ($(HERE),rdslwp)
RVMTARGET := lwp
endif


ifeq ($(RVMTARGET),)
EXECUTABLES = rdsinit 
SSBINS      = rdsinit
LIBRARIES   = librds.a 
EXPHEADERS = rds.h
PRIVHEADERS = rds_private.h

HEADERS     = ${EXPHEADERS} ${PRIVHEADERS}
librds.a: $(LIBOBJ)

rdsinit: $(OBJ)
	$(CC) -o rdsinit $? librds.a $(RDSINIT_LIBS)
endif


ifeq ($(RVMTARGET),lwp)
CFLAGS += -DRVM_USELWP
LIBRARIES = librdslwp.a

%.o : $(srcdir)/../rds/%.c
	$(CC) $(CFLAGS) -c $< -o $@
	@mkdir -p .depfiles ; mv $*.d .depfiles

librdslwp.a: $(LIBOBJ)
endif

ifeq ($(RVMTARGET), pthread)
CLFAGS += -DRVM_USEPT -DREENTRANT

endif

include $(TOPDIR)/configs/Makerules
